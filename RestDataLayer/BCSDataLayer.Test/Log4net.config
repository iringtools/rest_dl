<log4net>
  <appender name="TestResult" type="log4net.Appender.FileAppender">
    <file value="./TestResult.txt"/>
    <appendToFile value="true" />
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%date [%thread] %-5level %logger - %message%newline" />
    </layout>
  </appender>

  <logger name="Bechtel.DataLayer">
    <level value="DEBUG" />
    <appender-ref ref="TestResult" />
  </logger>

  <appender name="TestLog" type="log4net.Appender.FileAppender">
    <file value="./TestLog.txt"/>
    <appendToFile value="true" />
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%date [%thread] %-5level %logger - %message%newline" />
    </layout>
  </appender>
  
  <logger name="Bechtel.DataLayer">
    <level value="DEBUG" />
    <appender-ref ref="TestLog" />
  </logger>
</log4net>